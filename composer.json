{
  "name": "arkhee/simplepubgen",
  "description": "Simple EPub Generator for PHP websites based on html content",
  "license" : "GPL-3.0 license",
  "homepage": "https://github.com/Arkhee/SimplePubGen",
  "require": {
    "php": "^7.1 || ^8"
  },
  "authors": [
    {
      "name": "Yannick Betemps",
      "email": "arkhee@gmail.com",
      "homepage": "https://github.com/Arkhee",
      "role": "Maintainer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Simplepubgen\\": "src/"
    }
  },
  "suggest": {
    "ext-dom": "Manage HTML Dom content",
    "ext-zip": "Use ZipArchive",
    "ext-libxml": "Use LIBXML"
  },
  "archive": {
    "exclude": [
      "/test",
      "/sample"
    ]
  }
}
